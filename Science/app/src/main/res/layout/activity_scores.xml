<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.science.ScoresActivity"
    android:background="@color/black">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scoresTextView"
        android:textColor="@color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/podiumContainer">

        <TextView
            android:text="firstplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerOne"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="100dp" />

        <TextView
            android:text="1st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstPlaceLabel"
            android:textColor="@color/gold"
            android:textSize="38sp"
            android:textAlignment="center"
            android:layout_marginTop="3dp" />

        <TextView
            android:text="secondplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerTwo"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textColor="@color/white" />

        <TextView
            android:text="2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondPlaceLabel"
            android:layout_marginTop="3dp"
            android:textColor="@color/silver"
            android:textSize="38sp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="thirdplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerThree"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="3rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thirdPlaceLabel"
            android:textSize="36sp"
            android:textColor="@color/bronze"
            android:textAlignment="textEnd"
            android:layout_marginRight="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/scores_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beatThemButton"
                android:layout_marginTop="50dp"
                android:background="@color/grey"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerCountTextView"
                android:layout_marginTop="45dp"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
