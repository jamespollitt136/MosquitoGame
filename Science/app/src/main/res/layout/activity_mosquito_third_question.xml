<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mosquito_third_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.science.MosquitoThirdQuestionActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/quiz_question_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/mosQuestionThreeText"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="@string/quiz_third_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mosThirdQuestion"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="35dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:id="@+id/qThreeGrid"
            android:layout_marginTop="20dp"
            android:rowCount="1"
            android:layout_gravity="center"
            android:columnCount="3">

            <ImageButton
                app:srcCompat="@drawable/q_three_dengue"
                android:id="@+id/dengueImageButton"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageButton
                app:srcCompat="@drawable/q_three_cancer"
                android:id="@+id/cancerImageButton"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="35dp"
                android:contextClickable="false"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageButton
                app:srcCompat="@drawable/q_three_herpes"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/herpesImageButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="90dp"
                android:layout_height="90dp" />
        </GridLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qThreeProgress"
            android:max="100"
            android:progress="50"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>
